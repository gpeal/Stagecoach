$sc_blue: #54B8FF;
$sc_gray_unclicked: #333333;
$sc_gray_clicked: #cccccc;

body {
  padding-top: 60px !important;
}

.jquery_form_error_message {
  display: block;
  margin-top: 3px;
}

footer {
	margin-top: 20px;
	padding-bottom: 20px;
}

footer p {
	margin-left: 176px;
	position: absolute;
}

#blog {
	float: right;
	margin-right: 180px;
}

#about {
	float: right;
	margin-right: 20px;
}

.username li {
	float: right;
}

#container-shifting-div {
	margin-left: 100px;
}

.sidebar {
	height: 100%;
	background-image: url("<%= image_path "sidebar/bg.png" %>");
	background-repeat: repeat-y;
	width: 80px;
	border-right: 1px solid gray;
	float: left;
	position: fixed;
	margin-top: -20px;
}

.sidebar-content {
	background-image: none;
	background-color: $sc_gray_unclicked;
}

.sidebar-content li {
	margin-bottom: 5px;
	border-bottom: 1px solid gray;
}

.sidebar-content a {
	color: white;
}

.sidebar-item {
	margin-left: 17px;
	border-bottom: 1px solid gray;
}