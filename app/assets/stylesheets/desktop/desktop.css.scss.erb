/* This is the CSS for the main body */
body {
  padding-top: 60px !important;
}

.jquery_form_error_message {
  display: block;
  margin-top: 3px;
}

#container-shifting-div {
	margin-left: 100px;
}

/* This is the footer CSS */
footer {
	margin-top: 20px;
	padding-bottom: 20px;
}

footer p {
	margin-left: 176px;
	position: absolute;
}

#blog {
	float: right;
	margin-right: 180px;
}

#about {
	float: right;
	margin-right: 20px;
}

/* This is the CSS for the header */
header {
	height: 40px;
}

.navbar-inner {
	height: 40px;
}

.navbar-inner.container {
	height: 40px;
}

#username {
	float: right;
	margin-right: 20px;
}

#username a {
	color: white;
}

#logo {
	height: 60px;
	width: 80px;
	text-align: center;
}

#signout {
	float: right;
}

#signout a {
	color: white;
}

.header-link {
	height: 33px;
	padding-top: 10px;
}

/* This is the CSS for the sidebar */
.sidebar {
	height: 100%;
	background-image: url("<%= image_path "sidebar/bg.png" %>");
	background-repeat: repeat-y;
	width: 80px;
	border-right: 4px solid black;
	box-shadow: 0px 0px 15px black;
	float: left;
	position: fixed;
	margin-top: -60px;
	z-index: 1040;
}

.sidebar_item {
	height: 80px;
	width: 80px;
	text-align: center;
}

.sidebar_item:hover {
	background-color: rgb(150,150,150);
	box-shadow: 0px 0px 50px 10px black;
}

.sidebar_item_link {
	text-align: center;
	color: white;
}

.sidebar_item_link:hover {
	text-align: center;
	text-decoration: none;
	color: white;
}

.sidebar_item_link:visited {
	text-align: center;
	text-decoration: none;
	color: white;
}