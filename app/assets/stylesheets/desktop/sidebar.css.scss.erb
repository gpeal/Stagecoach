/* This is the CSS for the sidebar */
#sidebar {
	height: 100%;
	background-image: url("<%= image_path "sidebar/bg.png" %>");
	background-repeat: repeat-y;
	width: 80px;
	border-right: 4px solid black;
	box-shadow: 0px 0px 15px black;
	float: left;
	position: fixed;
	margin-top: -60px;
	z-index: 1040;
}

.sidebar_item {
	height: 80px;
	width: 80px;
	text-align: center;
}

.sidebar_item:hover {
	background-color: rgb(150,150,150);
	box-shadow: 0px 0px 50px 10px black;
}

.sidebar_item_link {
	text-align: center;
	color: white;
}

.sidebar_item_disabled{
	background-color: rgb(100,100,100);
	text-align: center;
	color: gray;
}

.sidebar_item_link:hover {
	text-align: center;
	text-decoration: none;
	color: white;
}

.sidebar_item_link:visited {
	text-align: center;
	text-decoration: none;
	color: white;
}

#logo {
	height: 60px;
	width: 80px;
	text-align: center;
}