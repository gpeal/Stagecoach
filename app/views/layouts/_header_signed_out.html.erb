<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Stagecoach", root_path, :class => "brand" %>
      <ul class="nav">
        <% url = request.path%>
        <% if url == root_path %>
          <li class="active"> <%= link_to "Home", root_path %></li>
        <% else %>
          <li> <%= link_to "Home", root_path %></li>
        <% end %>
        <% if url == signup_path %>
          <li class = "active"><%= link_to "Sign Up", signup_path %></li>
        <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
        <% end %>
        <li><%= link_to "Sign in with Facebook", signin_path(:facebook) %></li>
        <li><%= link_to "Sign in with Gmail", signin_path(:google) %></li>
      </ul>
    </div>
  </div>
</header>
<% if(flash[:success]) %>
  <div class="alert alert-success" data-dismiss="alert" href="#">
    <a class="close">x</a>
    <%= flash[:success] %>
  </div>
<% end %>
<% if( flash[:error] ) %>
  <div class="alert alert-error" data-dismiss="alert" href="#">
    <a class="close">x</a>
    <%= flash[:error] %>
  </div>
<% end %>
<% if( flash[:notice] ) %>
  <div class="alert alert-notice" data-dismiss="alert" href="#">
    <a class="close">x</a>
    <%= flash[:notice] %>
  </div>
<% end %>
<% if( flash[:info] ) %>
  <div class="alert alert-info" data-dismiss="alert" href="#">
    <a class="close">x</a>
    <%= flash[:info] %>
  </div>
<% end %>
