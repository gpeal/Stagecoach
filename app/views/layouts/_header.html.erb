<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Stagecoach", root_path, :class => "brand" %>
      <ul class="nav">
        <% url = request.path%> 
        <% if url == root_path %>
          <li class="active"> <%= link_to "Home", root_path %></li>
        <% else %>
          <li> <%= link_to "Home", root_path %></li>
        <% end %>
        <% if url == about_path %>
          <li class = "active"><%= link_to "About Us", about_path %></li>
        <% else %>
          <li><%= link_to "About Us", about_path %></li>
        <% end %>
        <% if url == signup_path %>
          <li class = "active"><%= link_to "Sign Up", signup_path %></li>
        <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
        <% end %>
        <% if current_user? %>
          <li><%= link_to current_user.name, signout_path %></li>
        <% else %>
          <li><a href="/signin">Sign In</a></li>
        <% end %>
        <% if url == posts_path %>
          <li class = "active"><%= link_to "Blog", posts_path %></li>
        <% else %>
          <li><%= link_to "Blog", posts_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% if(flash[:success]) %>
  <div class="alert alert-success" data-dismiss="alert" href="#">
    <a class="close">x</a>
    <%= flash[:success] %>
  </div>
<% end %>
<% if( flash[:error] ) %>
  <div class="alert alert-error" data-dismiss="alert" href="#">
    <a class="close">x</a>
    <%= flash[:error] %>
  </div>
<% end %>
<% if( flash[:notice] ) %>
  <div class="alert alert-notice" data-dismiss="alert" href="#">
    <a class="close">x</a>
    <%= flash[:notice] %>
  </div>
<% end %>
<% if( flash[:info] ) %>
  <div class="alert alert-info" data-dismiss="alert" href="#">
    <a class="close">x</a>
    <%= flash[:info] %>
  </div>
<% end %>
