<!DOCTYPE html>
<html>
<head>
  <title>Stagecoach</title>
  <%= stylesheet_link_tag    'desktop/desktop' %>
  <%= stylesheet_link_tag    'shared/shared' %>
  <%= javascript_include_tag 'desktop/desktop' %>
  <%= javascript_include_tag 'shared/shared' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if self.current_user? %>
    <%= render 'layouts/header_signed_in' %>
    <nav class="sidebar">
        <div class="sidebar-content">
          <div id="application-task-link"><a href="#"><div class="sidebar-item"><%= image_tag "sidebar/tasks.png" %>Tasks</div></a></div>
          <div id="application-projects-link"><a href="#"><div class="sidebar-item"><%= image_tag "sidebar/projects.png" %>Projects</div></div>
          <div id="application-crew-link"><a href="#"><div class="sidebar-item"><%= image_tag "sidebar/crew.png" %>Crew</div></div>
        </div>
      </nav>
  <% else %>
    <%= render 'layouts/header_signed_out' %>
  <% end %>
  <div id="container-shifting-div">
    <div class ="container" id="right-content">
      <!-- start container -->
      <!-- if the user is signed in, put the alerts inside the container so they don't disturb the sidebar -->
      <% if self.current_user? %>
        <% if(flash[:success]) %>
          <div class="alert alert-success" data-dismiss="alert" href="#">
            <a class="close">x</a>
            <%= flash[:success] %>
          </div>
        <% end %>
        <% if( flash[:error] ) %>
          <div class="alert alert-error" data-dismiss="alert" href="#">
            <a class="close">x</a>
            <%= flash[:error] %>
          </div>
        <% end %>
        <% if( flash[:notice] ) %>
          <div class="alert alert-notice" data-dismiss="alert" href="#">
            <a class="close">x</a>
            <%= flash[:notice] %>
          </div>
        <% end %>
        <% if( flash[:info] ) %>
          <div class="alert alert-info" data-dismiss="alert" href="#">
            <a class="close">x</a>
            <%= flash[:info] %>
          </div>
        <% end %>
      <% end %>
      <!-- input the page here -->  
      <%= yield %>
    </div>
  </div>
  <!-- end container -->
  <%= render 'layouts/footer' %>
</body>
</html>
