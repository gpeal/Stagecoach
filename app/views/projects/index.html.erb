<!--<h1>Listing projects</h1>-->
<br>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td>
      <b>
        <% if project == self.current_project %> <%= project.name.capitalize %> (current project) <% end %>
      </b>
        <% if project != self.current_project %> <%= project.name.capitalize %> <% end %>
    </td>
    <td><%= link_to 'Show', project %></td>
    <td><%= link_to 'Edit', edit_project_path(project) %></td>
    <td><%= link_to 'Delete', project, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to "Switch To", project, :method => :post %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_project_path , :class => "btn" %>
<%= link_to 'Join a Project', join_project_path  , :class => "btn" %>