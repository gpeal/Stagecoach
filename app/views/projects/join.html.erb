<h1>Join a Project</h1>

<%= form_tag("/projects/joinaction", :"data-ajax" => "false") %>
<ul>
	<!-- TASK NAME -->
	<li>
		<%= label_tag "projectname", "Project Name" %>
		<%= text_field_tag "projectname", nil, :placeholder => "Project Name" %>
	</li>

	<!-- DESCRIPTION -->
	<li>
		<%= label_tag "projectpassword", "Project Password" %>
		<%= password_field_tag "projectpassword", nil, :placeholder => "Project Password" %>
	</li>
	<!-- CREATE-->
	<li>
		<%= submit_tag "Join" %>
	</li>

</ul>

</form>
