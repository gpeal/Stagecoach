<%= form_for(:user) do |f| %>

  <ul data-role="listview" data-inset="true">
    <li data-role="fieldcontain">
      <label for="users-new-form-form-name">Name: </label>
      <%= f.text_field :name, :id => "users-new-form-form-name", :disabled => true %>
    </li>
    <li data-role="fieldcontain">
      <label for="users-new-form-form-email">Email: </label>
      <%= f.text_field :email, :id => "users-new-form-form-email", :disabled => true %>
    </li>
    <li data-role="fieldcontain">
      <label for="users-new-form-form-phonenumber">Phone: </label>
      <%= f.text_field :phonenumber, :id => "users-new-form-form-phonenumber", :disabled => true %>
    </li>
  </ul>
<% end %>

<%= link_to "Edit Profile", edit_user_path(current_user), :"data-role" => "button" %>