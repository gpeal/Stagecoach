    <ul data-role="listview" data-inset="true">
     <!-- TASK NAME -->
      <li data-role="fieldcontain">
        <p>Task Name</p>
        <h3><%= @task.name %></h3>
      </li>
      
       <!-- DESCRIPTION -->
      <li data-role="fieldcontain">
        <p>Description</p>
        <h3><%= @task.notes %></h3>
      </li>
      
    <!-- PRIORITY -->
      <li data-role="fieldcontain">
        <p>Priority</p>
        <h3><% if @task.priority == 0 %>Low<% elsif @task.priority == 1 %>High<% end %></h3>
      </li>
      
      
    <!-- CATEGORIES -->

      <li data-role="fieldcontain">
        <p>Task Categories</p>
        <div>
            <% for task_category in @task.task_categories.each do %>
                <h3><%= task_category.name %></h3>
            <% end %>
        </div>
      </li>
      
    <!-- START DATE TIME -->
      <li data-role="fieldcontain">
        <p>Start Time</p>
        <h3><%= @task.startdate %></h3>
      </li>

    <!-- END DATE TIME -->
      <li data-role="fieldcontain">
        <p>End Time</p>
        <h3><%= @task.enddate %></h3>
      </li>
    
  <!-- EDIT-->
      <li data-role="fieldcontain">
            <a href= <%= edit_task_path(@task) %> >Edit</a>
      </li>
      
    </ul>