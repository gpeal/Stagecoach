    <ul data-role="listview" data-inset="true">
     <!-- TASK NAME -->
     <li data-role="fieldcontain">
      <p>Task Name</p>
      <h3><%= @task.name.split(' ').map {|w| w.capitalize }.join(' ') %></h3>
    </li>

    <!-- DESCRIPTION -->
    <li data-role="fieldcontain">
      <p>Description</p>
      <h3><%= @task.description %></h3>
    </li>

    <!-- PRIORITY -->
    <li data-role="fieldcontain">
      <p>Priority</p>
      <h3><%= @task.task_priority %></h3>
    </li>

    <!-- Status -->
    <li data-role="fieldcontain">
      <p>Status</p>
      <h3><%= @task.task_status.name %></h3>
    </li>

    <!-- CATEGORIES -->

    <li data-role="fieldcontain">
      <p>Task Categories</p>
      <div>
        <% for task_category in @task.task_categories.each do %>
        <h3><%= task_category.name %></h3>
        <% end %>
      </div>
    </li>

    <!-- ASSIGNEES -->

    <li data-role="fieldcontain">
      <p>Assignees</p>
      <div>
        <% for user in @task.users.each do %>
        <h3><%= user.name.split(' ').map {|w| w.capitalize }.join(' ') %></h3>
        <% end %>
      </div>
    </li>

    <!--  TIME -->
    <li data-role="fieldcontain">
      <p>Start Time</p>
      <h3><%= @task.formatted_time %></h3>
    </li>

    <!-- EDIT-->
    <li data-role="fieldcontain">
      <fieldset class="ui-grid-a">
        <div class="ui-block-a"><a href= <%= edit_task_path(@task) %> data-role="button" data-theme="c">Edit</a></div>
        <% unless @task.task_status.name == "Complete" %>
        <div class="ui-block-b"> <%= button_to 'Mark Complete', mark_task_complete_path(@task.id), :"data-theme" => "a"%></div>
        <% end %>
      </fieldset>
    </li>



  </ul>