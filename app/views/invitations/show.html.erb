<h1>Show invitation</h1>

<%= form_for(@invitation) do |f| %>
	<div class="field">
		<%= f.label :from %>
		<%= f.text_field :from, :value => @invitation.from, :disabled => true %>
	</div>
	<div class="field">
		<%= f.label :to %>
		<%= f.text_field :to, :value => @invitation.to, :disabled => true %>
	</div>
	<div class="field">
		<%= f.label :start_date %>
		<%= f.date_select :start_date, :value => @invitation.start_date, :disabled => true %>
	</div>
	<div class="field">
		<%= f.label :end_date %>
		<%= f.date_select :end_date, :value => @invitation.end_date, :disabled => true %>
	</div>
	<div class="field">
		<%= f.label :subject %>
		<%= f.text_field :subject, :value => @invitation.subject, :disabled => true %>
	</div>
	<div class="field">
		<%= f.label :body %>
		<%= f.text_area :body, :value => @invitation.body, :disabled => true %>
	</div>
<% end %>

<%= link_to 'Edit', edit_invitation_path(@invitation) %>
<%= link_to 'Back', invitations_path %>
