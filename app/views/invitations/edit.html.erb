<h1>New invitation</h1>

<%= form_for(@invitation) do |f| %>
	<div class="field">
		<%= f.label :from %>
		<%= f.text_field :from, :value => @invitation.from, :disabled => true %>
	</div>
	<div class="field">
		<%= f.label :to %>
		<%= f.text_field :to, :value => @invitation.to, :disabled => true %>
	</div>
	<div class="field">
		<%= f.label :start_date %>
		<%= f.date_select :start_date %>
	</div>
	<div class="field">
		<%= f.label :end_date %>
		<%= f.date_select :end_date %>
	</div>
	<div class="field">
		<%= f.label :subject %>
		<%= f.text_field :subject %>
	</div>
	<div class="field">
		<%= f.label :body %>
		<%= f.text_area :body %>
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>


<%= link_to 'Back', invitations_path %>
