<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @task_categories.each do |task_category| %>
  <tr>
    <td><%= task_category.name %></td>
    <td><%= link_to 'Show', task_category %></td>
    <td><%= link_to 'Edit', edit_task_category_path(task_category) %></td>
